{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/out/main.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "prestart",
      "runtimeExecutable": "${workspaceRoot}/node_modules/electron/dist/electron.exe",
      "runtimeArgs": [
        "."
      ],
      "env": {
        "NODE_ENV": "development",
        "BLUEBIRD_DEBUG": "0"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "outDir": null
    },
    {
      "name": "Attach to renderer",
      "type": "node2",
      "request": "attach",
      "port": 9222,
      "sourceMaps": true
    },
    {
      "name": "Debug Unit Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ]
    }
  ]
}