{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug Electron",
      "configurations": [
        "Debug Main Process",
        "Debug Renderer Process"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug Electron (Staging)",
      "configurations": [
        "Debug Main Process (Staging)",
        "Debug Renderer Process"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Debug Electron (Nexus Next)",
      "configurations": [
        "Debug Main Process (Nexus Next)",
        "Debug Renderer Process"
      ],
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      },
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        ".",
        "--remote-debugging-port=9222"
      ],
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development",
        "START_DEVTOOLS": "true"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole",
      "autoAttachChildProcesses": true,
      "timeout": 60000,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    },
    {
      "name": "Debug Main Process (Staging)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/main.js",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "."
      ],
      "env": {
        "NODE_ENV": "development",
        "START_DEVTOOLS": "true",
        "IS_PREVIEW_BUILD": "true"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "autoAttachChildProcesses": true,
      "timeout": 60000
    },
    {
      "name": "Debug Main Process (Nexus Next)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/main.js",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "."
      ],
      "env": {
        "NODE_ENV": "development",
        "START_DEVTOOLS": "true"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "autoAttachChildProcesses": true,
      "timeout": 60000
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "timeout": 60000,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceRoot}/node_modules/**",
        "${workspaceRoot}/dist-electron/**"
      ]
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        // "${file}", specify the test file to run or leave empty to run all tests
        "__tests__/fblo.updateset.test.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}