{
  "spawn": [
    {
      "executable": "node-sass",
      "arguments": [
        "src/stylesheets/index.scss",
        "app/assets/css/base.css"
      ],
      "target": [
        "app"
      ]
    },
    {
      "executable": "tsc",
      "arguments": [
        "-p",
        ".",
        "--outDir", "app"
      ],
      "target": [
        "app"
      ]
    }
  ],
  "copy": [
    {
      "srcPath": "./LICENSE.md",
      "outPath": "",
      "skipPaths": 0,
      "target": [
        "app"
      ]
    },
    {
      "srcPath": "src/stylesheets",
      "outPath": "assets/css",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "node_modules/font-awesome/css/font-awesome.min.css",
      "outPath": "assets",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "node_modules/font-awesome/fonts/fontawesome-webfont.woff2",
      "outPath": "assets",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "src/index.html",
      "outPath": "",
      "target": [
        "out",
        "app"
      ],
      "skipPaths": 1
    },
    {
      "srcPath": "src/splash.html",
      "outPath": "",
      "target": [
        "out",
        "app"
      ],
      "skipPaths": 1
    },
    {
      "srcPath": "locales/*/*",
      "outPath": "",
      "target": [
        "out"
      ]
    },
    {
      "srcPath": "locales/*/*",
      "outPath": "",
      "target": [
        "app"
      ]
    },
    {
      "srcPath": "assets/images/",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "assets/fonts/*",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "assets/*.json",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "assets/licenses/*",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "extensions/*/index.js",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "src/games/*/*.png",
      "outPath": "",
      "skipPaths": 1,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "node_modules/7zip-bin-win/x64/7za.exe",
      "outPath": "",
      "rename": "7z.exe",
      "skipPaths": 3,
      "target": [
        "app"
      ]
    }
  ]
}
