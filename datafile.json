{
  "spawn": [
    {
      "executable": "lessc",
      "arguments": [
        "--clean-css",
        "--include-path=node_modules/bootswatch:node_modules/bootstrap-less",
        "src/stylesheets/index.less",
        "app/assets/css/base.css"
      ],
      "target": [
        "app"
      ]
    },
    {
      "executable": "tsc",
      "arguments": [
        "-p",
        ".",
        "--outDir", "app"
      ],
      "target": [
        "app"
      ]
    }
  ],
  "copy": [
    {
      "srcPath": "src/stylesheets",
      "outPath": "assets/css",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "node_modules/font-awesome/css/font-awesome.min.css",
      "outPath": "assets",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "node_modules/font-awesome/fonts/fontawesome-webfont.woff2",
      "outPath": "assets",
      "skipPaths": 2,
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "src/index.html",
      "outPath": "",
      "target": [
        "out",
        "app"
      ],
      "skipPaths": 1
    },
    {
      "srcPath": "assets/fonts/*",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "locales/*/*",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "assets/images/",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "extensions/*/index.js",
      "outPath": "",
      "target": [
        "out",
        "app"
      ]
    },
    {
      "srcPath": "src/games/*/*.png",
      "outPath": "",
      "skipPaths": 1,
      "target": [
        "out",
        "app"
      ]
    },
        {
      "srcPath": "lib/csharp/ModInstaller/bin/Release/*",
      "outPath": "lib/ModInstaller",
      "skipPaths": 5,
      "target": [
        "out",
        "app"
      ]
    }
  ]
}