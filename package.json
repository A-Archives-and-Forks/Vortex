{
  "private": true,
  "name": "nmm2_devel",
  "version": "0.0.1",
  "main": "out/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nexus-Mods/NMM2"
  },
  "scripts": {
    "_assets_out": "node InstallAssets.js out",
    "_assets_app": "node InstallAssets.js app",

    "_build_subprojects_out": "node BuildSubprojects.js out",
    "_build_subprojects_app": "node BuildSubprojects.js app",

    "build_api": "tsc -p ./api && npm install ./api",

    "build_rest": "npm run _assets_out && npm run _build_subprojects_out && npm run build_api",

    "prepackage": "npm run build_api && npm run _install_app && npm run _build_subprojects_app && npm run _assets_app && npm install 7zip-bin",
    "package": "build",

    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=development electron .",

    "_install_app": "cd app && npm install && npm update",

    "preinstallex": "npm install rm-local-modules && rm-local-modules",
    "installex": "npm install && npm run build",

    "postinstall": "typings install",

    "lessc": "lessc --clean-css --include-path=node_modules/bootswatch:node_modules/bootstrap-less src/stylesheets/index.less out/assets/css/base.css",
    "sassc": "node-sass src/stylesheets/index.scss out/assets/css/base.css",
    "test": "jest --no-cache",
    "doc": "typedoc --out doc src",

    "build": "tsc -p . && npm run sassc && npm run build_rest",
    "buildwatch": "npm run build_rest && concurrently -p \"\" --kill-others \"tsc -p . -w\" npm-watch"
  },
  "watch": {
    "sassc": {
      "patterns": [
        "src\\stylesheets"
      ],
      "extensions": "scss",
      "ignore": "",
      "quiet": false
    }
  },
  "engines": {
    "electron": "1.4.14"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx|ts|tsx)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/app/"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "collectCoverage": true
  },
  "build": {
    "asar": false,
    "appId": "com.nexusmods.nmm2",
    "win": {
      "target": "squirrel",
      "icon": "assets/images/nmm.ico",
      "iconUrl": "https://staticdelivery.nexusmods.com/contents/Templates/110/favicon.ico"
    },
    "extraResources": [
      "locales"
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
