{
  "private": true,
  "name": "nmm2_devel",
  "version": "0.0.1",
  "main": "out/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nexus-Mods/NMM2"
  },
  "scripts": {
    "_babel_out": "cross-env BABEL_ENV=development babel out -d out --ignore extensions",
    "_babel_app": "cross-env BABEL_ENV=production babel app -d app --ignore node_modules",
    "_assets_out": "node InstallAssets.js out",
    "_assets_app": "node InstallAssets.js app && npm run _babel_app",
    "_install_app": "cd app && npm install rm-local-modules && rm-local-modules && npm install && npm update",
    "prestart": "npm run _assets_out",
    "prepackage": "npm run build_nexusapi && npm run _install_app && npm run _assets_app",
    "package": "build",
    "postinstall": "typings install",
    "start": "cross-env NODE_ENV=development electron .",
    "quickstart": "cross-env NODE_ENV=development electron .",
    "preinstallex": "npm install rm-local-modules && rm-local-modules",
    "installex": "npm install && npm run build_api && electron-rebuild -w icon-extract,ffi,node-7z,winreg,ref && cd node_modules/redux-persist && npm run build:commonjs",
    "build_nexusapi": "cd lib/js/nexus-api && npm run build",
    "build_api": "tsc -p ./api && npm install ./api",
    "build_out": "tsc -p . && npm run lessc",
    "buildwatch": "concurrently -p \"\" --kill-others \"tsc -p . -w\" npm-watch",
    "lessc": "lessc --clean-css --include-path=node_modules/bootswatch:node_modules/bootstrap-less src/stylesheets/index.less out/assets/css/base.css",
    "test": "jest",
    "doc": "typedoc --out doc src"
  },
  "watch": {
    "lessc": {
      "patterns": [
        "src\\stylesheets"
      ],
      "extensions": "less",
      "ignore": "",
      "quiet": false
    }
  },
  "engines": {
    "electron": "1.4.3"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  },
  "build": {
    "asar": false,
    "appId": "com.nexusmods.nmm2",
    "win": {
      "target": "squirrel",
      "icon": "assets/images/nmm.ico",
      "iconUrl": "https://staticdelivery.nexusmods.com/contents/Templates/110/favicon.ico"
    },
    "extraResources": [
      "locales"
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "devDependencies": {
    "@types/content-type": "^1.0.33",
    "@types/ffi": "^0.0.18",
    "@types/form-data": "^0.0.32",
    "@types/node": "^6.0.45",
    "@types/node-uuid": "^0.0.28",
    "@types/ref": "^0.0.28",
    "@types/ref-struct": "^0.0.28",
    "@types/ref-union": "^0.0.28",
    "@types/tmp": "^0.0.31",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-jest": "^15.0.0",
    "babel-plugin-uglify": "^1.0.2",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "babel-template": "^6.15.0",
    "babel-traverse": "^6.15.0",
    "babel-types": "^6.15.0",
    "babylon": "^6.9.1",
    "bluebird": "^3.4.6",
    "bootstrap-less": "^3.3.8",
    "bootswatch": "^3.3.7",
    "classnames": "^2.2.5",
    "concurrently": "^3.1.0",
    "content-type": "^1.0.2",
    "copyfiles": "^1.0.0",
    "cross-env": "^2.0.0",
    "devtron": "^1.3.0",
    "drivelist": "^3.3.4",
    "electron": "1.4.3",
    "electron-builder": "^7.0.0",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.1",
    "electron-edge": "^6.5.2",
    "electron-rebuild": "^1.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "ffi": "^2.1.0",
    "fs-extra-promise": "^0.4.0",
    "gamebryo-savegame": "file:./lib/cpp/gamebryo-savegame",
    "i18next": "^3.4.1",
    "i18next-node-fs-backend": "^0.1.2",
    "icon-extract": "file:./lib/cpp/icon-extract",
    "jest": "^15.1.1",
    "jest-cli": "^15.1.1",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "level-js": "^2.2.4",
