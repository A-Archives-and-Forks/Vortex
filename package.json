{
  "private": true,
  "name": "nmm2_devel",
  "version": "0.0.1",
  "main": "out/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nexus-Mods/NMM2"
  },
  "scripts": {
    "_theme_out": "copyup -f node_modules/font-awesome/css/font-awesome.min.css out/assets/css && copyup -f node_modules/font-awesome/fonts/fontawesome-webfont.woff2 out/assets/fonts",
    "_theme_app": "copyup -f node_modules/font-awesome/css/font-awesome.min.css app/assets/css && copyup -f node_modules/font-awesome/fonts/fontawesome-webfont.woff2 app/assets/fonts",
    "_assets_out": "copyup src/index.html out && copyfiles assets/fonts/* out && copyfiles locales/*/* out && copyfiles assets/images/* out && copyfiles -u 1 extensions/*/index.js out/extensions",
    "_assets_app": "copyup src/index.html app && copyfiles assets/fonts/* app && copyfiles assets/images/* app && copyfiles -u 1 extensions/*/index.js app/extensions",
    "_babel_out": "cross-env BABEL_ENV=development babel out -d out --ignore extensions",
    "_babel_app": "cross-env BABEL_ENV=development babel app -d app --ignore node_modules",
    "_less_out": "lessc --clean-css --include-path=node_modules/bootswatch:node_modules/bootstrap-less src/less/index.less out/assets/css/theme.css",
    "_less_app": "lessc --clean-css --include-path=node_modules/bootswatch:node_modules/bootstrap-less src/less/index.less app/assets/css/theme.css",
    "_install_app": "cd app && npm install",
    "prestart": "(tsc -p . --outDir out || (exit 0)) && npm run _less_out && npm run _assets_out && npm run _theme_out && npm run _babel_out",
    "prepackage": "npm run _install_app && tsc -p . --outDir app && npm run _less_app && npm run _assets_app && npm run _theme_app && npm run _babel_app",
    "package": "build",
    "postinstall": "typings install",
    "start": "cross-env NODE_ENV=production electron --enable-logging --remote-debugging-port=9222 .",
    "test": "jest",
    "doc": "typedoc --out doc src"
  },
  "engines": {
    "electron": "1.3.5"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.jsx?$"
  },
  "build": {
    "asar": true,
    "appId": "com.nexusmods.nmm2",
    "win": {
      "target": "squirrel",
      "iconUrl": "https://staticdelivery.nexusmods.com/contents/Templates/110/favicon.ico"
    },
    "extraResources": [
      "locales"
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-jest": "^15.0.0",
    "babel-plugin-uglify": "^1.0.2",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "babel-template": "^6.15.0",
    "babel-traverse": "^6.15.0",
    "babel-types": "^6.15.0",
    "babylon": "^6.9.1",
    "bluebird": "^3.4.6",
    "bootstrap-less": "^3.3.8",
    "bootswatch": "^3.3.7",
    "classnames": "^2.2.5",
    "copyfiles": "^1.0.0",
    "cross-env": "^2.0.0",
    "devtron": "^1.3.0",
    "electron": "1.3.5",
    "electron-builder": "^5.26.0",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.1",
    "electron-edge": "^5.9.2-p0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra-promise": "^0.4.0",
    "i18next": "^3.4.1",
    "i18next-node-fs-backend": "^0.1.2",
    "jest": "^15.1.1",
    "jest-cli": "^15.1.1",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "node-rest-client": "^2.0.1",
    "react-addons-test-utils": "^15.3.1",
    "react-addons-update": "^15.3.0",
    "react-bootstrap": "^0.30.2",
    "react-fontawesome": "^1.1.0",
    "react-i18next": "^1.8.0",
    "react-layout-pane": "^0.1.16",
    "react-redux": "^4.4.5",
    "react-shallow-testutils": "^2.0.0",
    "react-sidebar": "^2.2.1",
    "redux": "^3.5.2",
    "redux-act": "^0.5.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dispatch": "^2.2.0",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-electron-store": "^0.3.13",
    "redux-persist": "^3.5.0",
    "redux-persist-node-storage": "^1.0.2",
    "tslint": "^3.15.1",
    "tslint-eslint-rules": "^1.5.0",
    "tslint-react": "^1.0.0",
    "typedoc": "^0.4.5",
    "typings": "^1.3.3",
    "winston": "^2.2.0"
  },
  "dependencies": {
    "font-awesome": "^4.6.3",
    "react": "^15.3.0",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.3.0",
    "source-map-support": "^0.4.2",
    "typescript": "^1.8.10"
  }
}
